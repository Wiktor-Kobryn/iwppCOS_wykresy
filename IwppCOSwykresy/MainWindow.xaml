<Window x:Class="IwppCOSwykresy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IwppCOSwykresy"
        mc:Ignorable="d"
        Title="COS obróbka danych" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Plik" Height="22" Margin="-2,-2,-2,0" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="lblTitle" Content=" Program do obróbki wyników badań uzyskanych z modeli fizycznych agregatów metalurgicznych - COS." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30" Width="574"/>
                    <Label Content="Kacper Rygał&#xD;&#xA;Jakub Woźniak&#xD;&#xA;Wiktor Kobryń&#xD;&#xA;IPpp40" HorizontalAlignment="Left" Margin="659,293,0,0" VerticalAlignment="Top" Height="74" Width="91"/>
                    <Button x:Name="btnLoadFile" Content="wczytaj plik" HorizontalAlignment="Left" Margin="27,45,0,0" VerticalAlignment="Top" Height="27" Width="106" Click="btnLoadFile_Click"/>
                    <Label x:Name="lblDeltaTime" Content="Odstęp czasowy pomiarów: -" HorizontalAlignment="Left" Margin="80,105,0,0" VerticalAlignment="Top" Height="34" Width="200"/>
                    <Button x:Name="btnSaveFile" Content="zapisz wyniki" HorizontalAlignment="Left" Margin="27,241,0,0" VerticalAlignment="Top" Height="27" Width="106" Click="btnLoadFile_Click"/>
                    <Label x:Name="lblDeltaTime_Kopiuj" Content="&lt;opis co to robi&gt;" HorizontalAlignment="Left" Margin="27,72,0,0" VerticalAlignment="Top" Height="33" Width="200"/>
                    <Label x:Name="lblDeltaTime_Kopiuj1" Content="&lt;opis co to robi&gt;" HorizontalAlignment="Left" Margin="27,273,0,0" VerticalAlignment="Top" Height="33" Width="200"/>
                </Grid>
            </TabItem>
            <TabItem Header="Wykresy surowe">
                <Grid Background="#FFE5E5E5">
                    <lvc:CartesianChart Margin="10,10,365,123" Background="White" Name="chartRawData"/>
                    <CheckBox x:Name="cbxDane0" Content="Kanał 1" HorizontalAlignment="Left" Margin="698,10,0,0" VerticalAlignment="Top"/>
                    <CheckBox x:Name="cbxDane1" Content="Kanał 2" HorizontalAlignment="Left" Margin="698,30,0,0" VerticalAlignment="Top"/>
                    <CheckBox x:Name="cbxDane2" Content="Kanał 3" HorizontalAlignment="Left" Margin="698,52,0,0" VerticalAlignment="Top"/>
                    <CheckBox x:Name="cbxDane3" Content="Kanał 4" HorizontalAlignment="Left" Margin="698,72,0,0" VerticalAlignment="Top"/>
                    <CheckBox x:Name="cbxDane4" Content="Kanał 5" HorizontalAlignment="Left" Margin="698,96,0,0" VerticalAlignment="Top"/>
                    <CheckBox x:Name="cbxDane5" Content="Kanał 6" HorizontalAlignment="Left" Margin="698,116,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="lblDeltaTime_Kopiuj2" Content="Odrzuć pomiary:" HorizontalAlignment="Left" Margin="10,294,0,0" VerticalAlignment="Top" Height="34" Width="102"/>
                    <TextBox HorizontalAlignment="Left" Margin="117,302,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="56"/>
                </Grid>
            </TabItem>
            <TabItem HorizontalAlignment="Center" Height="22" Header="Wykresy bezwzględne" VerticalAlignment="Top" Width="143" Margin="0,-1,0,0">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem HorizontalAlignment="Center" Height="22" Header="Strefy" VerticalAlignment="Center" Width="54">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
